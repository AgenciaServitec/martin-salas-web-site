---
import HeroAnimations from "./animations/HeroAnimations.astro";
---

<section
        id="hero"
        class="relative min-h-screen overflow-hidden flex items-center bg-gradient-to-br from-[#c5d86d] via-[#e8d8b8] to-[#f4e08a]"
>
    <div class="absolute inset-0">
        <img
                src="/fondo.jpg"
                alt="Candidato al Senado del Perú"
                class="w-full h-full object-cover opacity-40"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-[#c5d86d]/80 via-transparent to-[#f4e08a]/60"></div>
    </div>

    <div class="relative z-10 w-full max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

            <div class="text-left space-y-8">

                <div
                        data-hero-item
                        class="flex items-center gap-2 text-gray-800"
                >
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <span class="text-sm font-semibold tracking-wide uppercase">
                        Let's make our country great again!
                    </span>
                </div>

                <div data-hero-title>
                    <h1 class="text-6xl md:text-8xl font-black leading-none text-[#003d82] tracking-tight">
                        MARTÍN<br>
                        <span class="text-[#002850]">SALAS</span>
                    </h1>
                </div>

                <div data-hero-item class="space-y-4">
                    <a
                            href="#vision"
                            class="inline-flex items-center gap-2 text-gray-800 font-semibold hover:gap-3 transition-all group"
                    >
                        <span>See Our Vision</span>
                        <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </a>

                    <div class="text-6xl md:text-7xl font-black text-[#d4a017] tracking-tight">
                        $88,145
                    </div>
                </div>

                <div data-hero-item class="relative inline-block">
                    <a
                            href="#mensaje"
                            class="group relative flex items-center gap-4"
                    >
                        <div class="relative">
                            <div class="absolute inset-0 rounded-full border-2 border-[#003d82] animate-ping opacity-30"></div>

                            <div class="relative w-32 h-32 bg-[#003d82] rounded-full flex items-center justify-center hover:scale-110 transition-transform shadow-2xl">
                                <svg class="absolute inset-0 w-full h-full animate-spin-slow" viewBox="0 0 100 100">
                                    <defs>
                                        <path id="circle" d="M 50, 50 m -37, 0 a 37,37 0 1,1 74,0 a 37,37 0 1,1 -74,0"/>
                                    </defs>
                                    <text class="text-[8px] fill-white font-bold tracking-[0.3em] uppercase">
                                        <textPath href="#circle" startOffset="0%">
                                            JOIN THE MOVEMENT • JOIN THE MOVEMENT •
                                        </textPath>
                                    </text>
                                </svg>

                                <svg class="w-8 h-8 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                                </svg>
                            </div>
                        </div>

                        <div class="text-left">
                            <div class="text-sm font-semibold text-gray-800 group-hover:text-[#003d82] transition-colors">
                                Play The Video
                            </div>
                        </div>
                    </a>
                </div>

            </div>

            <div class="relative lg:block hidden">
                <div data-hero-item class="relative">
                    <div class="relative">
                        <img
                                src="/hero.png"
                                alt="Martín Salas - Candidato al Senado"
                                class="w-full h-auto object-contain relative z-10"
                        />
                    </div>

                    <div class="absolute top-8 -right-4 bg-white/95 backdrop-blur-sm rounded-2xl p-6 shadow-2xl max-w-xs border border-gray-200 transform hover:scale-105 transition-transform">
                        <a href="#vision" class="block group">
                            <div class="flex items-start justify-between mb-3">
                                <span class="text-sm font-bold text-gray-800">See Our Vision</span>
                                <svg class="w-5 h-5 text-gray-400 group-hover:text-[#003d82] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                </svg>
                            </div>
                            <p class="text-sm text-gray-600 leading-relaxed">
                                Fight for a just and equitable society; or "Vote for a brighter tomorrow."
                            </p>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div
            data-hero-item
            class="fixed right-6 top-1/2 -translate-y-1/2 z-20 hidden lg:flex flex-col gap-3"
    >
        <a
                href="https://facebook.com"
                target="_blank"
                class="w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-[#003d82] hover:text-white transition-all shadow-lg hover:scale-110 group"
        >
            <svg class="w-5 h-5 text-gray-800 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
        </a>
        <a
                href="https://twitter.com"
                target="_blank"
                class="w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-[#003d82] hover:text-white transition-all shadow-lg hover:scale-110 group"
        >
            <svg class="w-5 h-5 text-gray-800 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
        </a>
        <a
                href="https://instagram.com"
                target="_blank"
                class="w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-[#003d82] hover:text-white transition-all shadow-lg hover:scale-110 group"
        >
            <svg class="w-5 h-5 text-gray-800 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
        </a>
        <a
                href="https://tiktok.com"
                target="_blank"
                class="w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-[#003d82] hover:text-white transition-all shadow-lg hover:scale-110 group"
        >
            <svg class="w-5 h-5 text-gray-800 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3V0Z"/>
            </svg>
        </a>
    </div>

    <div
            data-hero-item
            class="fixed bottom-8 left-1/2 -translate-x-1/2 z-20 lg:hidden"
    >
        <a
                href="#mensaje"
                class="w-16 h-16 bg-[#003d82] rounded-full flex items-center justify-center shadow-2xl hover:scale-110 transition-transform"
        >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
            </svg>
        </a>
    </div>

</section>

<style>
    @keyframes spin-slow {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    .animate-spin-slow {
        animation: spin-slow 20s linear infinite;
    }
</style>

<HeroAnimations />
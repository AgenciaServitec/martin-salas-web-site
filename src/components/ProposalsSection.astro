<script>
    const observer = new IntersectionObserver(
        entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.remove('opacity-0', 'translate-y-10');

                    const index = entry.target.getAttribute('data-propuesta');
                    if (index !== null) {
                        const bg = document.querySelector(`[data-bg="${index}"]`);
                        if (bg) {
                            bg.classList.add('opacity-100');
                        }
                    }
                } else {
                    const index = entry.target.getAttribute('data-propuesta');
                    if (index !== null) {
                        const bg = document.querySelector(`[data-bg="${index}"]`);
                        if (bg) {
                            bg.classList.remove('opacity-100');
                        }
                    }
                }
            });
        },
        { threshold: 0.3 }
    );

    document.querySelectorAll('[data-propuesta]').forEach(el => observer.observe(el));
</script>

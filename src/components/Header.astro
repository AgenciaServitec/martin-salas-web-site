<header
        id="site-header"
        class="fixed top-0 left-0 w-full z-50 transition-all duration-500 -translate-y-full"
>
    <div
            id="header-bg"
            class="backdrop-blur-md bg-black/20 border-b border-white/10 transition-colors duration-500"
    >
        <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">

            <div class="text-white font-semibold tracking-wide uppercase text-sm">
                Martin Salas
            </div>

            <div class="hidden md:block text-white/60 text-xs tracking-wide">
                Candidato al Senado – Perú
            </div>

            <a
                    href="#voluntariado"
                    class="text-xs font-semibold text-white px-5 py-2 rounded-full border border-white/30 hover:bg-white hover:text-black transition-all"
            >
                Súmate
            </a>

        </div>
    </div>
</header>

<script>
    let lastScroll = 0;
    const header = document.getElementById('site-header');
    const bg = document.getElementById('header-bg');

    window.addEventListener('scroll', () => {
        const currentScroll = window.scrollY;

        if (currentScroll > 80) {
            header.classList.remove('-translate-y-full');
            bg.classList.replace('bg-black/20', 'bg-black/60');
        } else {
            header.classList.add('-translate-y-full');
            bg.classList.replace('bg-black/60', 'bg-black/20');
        }

        lastScroll = currentScroll;
    });
</script>

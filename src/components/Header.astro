<header
        id="site-header"
        class="fixed top-0 left-0 w-full z-50 transition-all duration-500 -translate-y-full opacity-0"
>
    <div
            id="header-bg"
            class="backdrop-blur-xl bg-white/80 border-b border-gray-100 shadow-sm transition-all duration-500"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 md:h-20 flex items-center justify-between">

            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-[#003d82] rounded-lg flex items-center justify-center shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 640 640">
                        <path d="M320 64C324.6 64 329.2 65 333.4 66.9L521.8 146.8C543.8 156.1 560.2 177.8 560.1 204C559.6 303.2 518.8 484.7 346.5 567.2C329.8 575.2 310.4 575.2 293.7 567.2C121.3 484.7 80.6 303.2 80.1 204C80 177.8 96.4 156.1 118.4 146.8L306.7 66.9C310.9 65 315.4 64 320 64zM320 130.8L320 508.9C458 442.1 495.1 294.1 496 205.5L320 130.9L320 130.9z"/>
                    </svg>
                </div>
                <div class="flex flex-col">
                    <span class="text-[#002850] font-black leading-none text-lg tracking-tight uppercase">
                        Martín <span class="text-[#d4a017]">Salas</span>
                    </span>
                    <span class="hidden sm:block text-[10px] text-gray-500 font-bold uppercase tracking-widest mt-0.5">
                        Candidato al Senado
                    </span>
                </div>
            </div>

            <nav class="hidden md:flex items-center gap-8">
                <a href="#biografia" class="text-sm font-bold text-[#002850] hover:text-[#d4a017] transition-colors">Biografía</a>
                <!--<a href="#noticias" class="text-sm font-bold text-[#002850] hover:text-[#d4a017] transition-colors">Actualidad</a>-->
                <a href="#contacto" class="text-sm font-bold text-[#002850] hover:text-[#d4a017] transition-colors">Contacto</a>
            </nav>

            <div class="flex items-center gap-4">
                <a
                        href="#contacto"
                        class="relative group overflow-hidden px-6 py-2.5 rounded-full bg-[#003d82] text-white text-xs font-black uppercase tracking-wider transition-all hover:scale-105 shadow-md shadow-blue-900/20"
                >
                    <span class="relative z-10">Súmate</span>
                    <div class="absolute inset-0 bg-[#d4a017] translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                </a>
            </div>

        </div>
    </div>
</header>

<style>
    html {
        scroll-behavior: smooth;
    }
</style>
<script>
    const header = document.getElementById('site-header');

    window.addEventListener('scroll', () => {
        const currentScroll = window.scrollY;

        if (currentScroll > 100) {
            header.classList.remove('-translate-y-full', 'opacity-0');
            header.classList.add('translate-y-0', 'opacity-100');
        } else {
            header.classList.add('-translate-y-full', 'opacity-0');
            header.classList.remove('translate-y-0', 'opacity-100');
        }
    });
</script>
